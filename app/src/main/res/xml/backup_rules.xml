<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules for MyFitnessApp.
   Includes Room database for user fitness data.
   See https://developer.android.com/guide/topics/data/autobackup
   Note: This file is ignored for devices older than API 31
-->
<full-backup-content>
    <!-- Include Room database -->
    <include domain="database" path="my-lesson-database" />
    <include domain="database" path="my-lesson-database-wal" />
    <include domain="database" path="my-lesson-database-shm" />
    <!-- Include shared preferences -->
    <include domain="sharedpref" path="." />
</full-backup-content>